{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "incremental": true,
    "esModuleInterop": true,
    "types": ["node", "vue"],
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "target": "ES5",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": [
    "**/dist/*",
    "node_modules/**/*",
  ]
}
